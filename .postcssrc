{
    "modules": true,
    "plugins": {
        "postcss-modules": {
            "generateScopedName": "[local]"
        },
        "autoprefixer": {
            "overrideBrowserslist": [
                ">1%",
                "last 4 versions",
                "Firefox ESR",
                "not ie < 9"
            ],
            "flexbox": "no-2009"
        },
        "cssnano": {
            "calc": true,
            "discardComments": {
                "removeAll": true
            }
        }
    }
}